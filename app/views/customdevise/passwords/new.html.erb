<div class="container is-fullhd">
  <section class="hero is-fullheight">
    <div class="hero-body">
      <div class="container">
        <div class="column is-half is-offset-one-quarter">
            <h2 class="title"><%= t('.forgot_your_password') %></h2>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'input', :placeholder => '이메일' %>
              </div>
              <div class="actions">
                <%= f.submit t('.send_me_reset_password_instructions'), :class => 'button is-dark is-fullwidth' %>
              </div>
            <% end %>
            <%= render "customdevise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>


